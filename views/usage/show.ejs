<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>

    <div class="container mb-3">

      <nav aria-label="breadcrumb">
        <ol class="breadcrumb p-1 pl-2 pr-2">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item"><a href="/usage">Board</a></li>
          <li class="breadcrumb-item active" aria-current="page"><%= usage.numId %>. <%= usage.title %></li>
        </ol>
      </nav>

      <div class="card">
        <h5 class="card-header p-2" data-search-highlight="title"><%= usage.numId %>. <%= usage.title %></h5>
        <div class="row">

          <div class="col-md-7 col-lg-8 col-xl-9 order-sm-2 order-md-1">
            <% if(usage.attachment) { %>
              <div class="ml-2">
                <small> <img src="/files/<%= usage.attachment.serverFileName %>/<%= usage.attachment.originalFileName %>" height="280" width="180"></img> </small>
               
              </div>
            <% } %>
            <div class="usage-body p-2" data-search-highlight="body"><%= usage.body %></div>
          </div>

          <div class="col-md-5 col-lg-4 col-xl-3 order-sm-1 order-md-2">
            <div class="usage-info card m-2 p-2">
              <div class="border-bottom pb-1 mb-1">
                <div><span>Author</span> : <span data-search-highlight="author"><%= usage.author ? usage.author.username : "" %></span></div>
                <div><span>Views</span> : <span><%= usage.views %></span></div>
              </div>
              <div><span>Created</span> : <span data-date-time="<%= usage.createdAt %>"></span></div>
              <% if(usage.updatedAt) { %>
                <div><span>Updated</span> : <span data-date-time="<%= usage.updatedAt %>"></span></div>
              <% } %>
            </div>
          </div>

        </div>
      </div>

      <div class="mt-3">
        <a class="btn btn-primary" href="/usage<%= getPostQueryString() %>">Back</a>
        <% if(isAuthenticated && usage.author && currentUser.id == usage.author.id){ %>
          <a class="btn btn-primary" href="/usage/<%= usage.numId %>/edit<%= getPostQueryString() %>">Edit</a>
          <form action="/usage/<%= usage.numId %>?_method=delete<%= getPostQueryString(true) %>" method="post" class="d-inline">
            <a class="btn btn-primary" href="javascript:void(0)" onclick="confirm('Do you want to delete this?')?this.parentElement.submit():null;">Delete</a>
          </form>
        <% } %>
      </div>

    


    </div>
  </body>
</html>
